<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
	  <!--item name="colorPrimary">#72B5A4</item-->
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#72B5A4</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#72B5A4</item>

	  <item name="android:datePickerDialogTheme">@style/StyleDate</item>	  
  </style>

	<style name="StyleDate" parent="ThemeOverlay.AppCompat.Dialog">
		<item name="colorAccent">#72B5A4</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">#fff</item>
		<!--body background-->
		<item name="android:windowBackground">#fff</item>
		<!--selected day-->
		<item name="android:colorControlActivated">#F15E5E</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">#72B5A4</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">#509987</item>
		<!--cancel&ok-->
	</style>
	
</resources>